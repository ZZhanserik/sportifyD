<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_green_stroke_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="18dp">

    <ImageView
        android:id="@+id/organizer_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:src="@drawable/icon_popular_event_png" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/organizer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="6sp"
            android:textStyle="bold"
            tools:text="Scott Brown" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/organizer"
            android:textSize="6sp" />

        <TextView
            android:id="@+id/organizer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="6sp"
            tools:text="Status: Open" />

        <TextView
            android:id="@+id/organizer_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="6sp"
            tools:text="Categoryâ€™s: Volleyball" />
    </LinearLayout>

</LinearLayout>
